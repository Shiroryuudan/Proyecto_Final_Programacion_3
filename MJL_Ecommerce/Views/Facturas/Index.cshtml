@model IEnumerable<MJL_Ecommerce.Models.Factura>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Index";
}

<h2>Indice</h2>

<div class="pt-4">
    <button style="background-color:lightgray; border-color:black; color:brown" class="p-button"> @Html.ActionLink("Crear Nuevo", "Create") </button>
</div>

<div class="card">
    <div class="text-center">
        <h4>Lista de Facturas</h4>
    </div>
    <div class="grid">
        @foreach (var item in Model)
        {
            <!--Cada producto-->
            <div class="col-12 md:col-6 lg:col-4">
                <div class="card product-grid-item">

                    <!-- Cod_Factura -->
                    <div class="text-center product-name pt-4">
                        Código Factura: @Html.DisplayFor(modelItem => item.Codigo)
                    </div>

                    <!-- Producto -->
                    <div class="text-center product-name pt-4">
                        @Html.DisplayFor(modelItem => item.Productos)
                    </div>
                    <!-- Total -->
                    <div class="text-center product-name pt-4">
                        Total Factura: @Html.DisplayFor(modelItem => item.total)
                    </div>



                    <!-- Boton -->
                    <div class="text-center pt-4">

                        <button style="background-color:lightgray; border-color:black; color:white" class="p-button"> <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> </button>
                        <button style="background-color:lightgray; border-color:black; color:white" class="p-button"> <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> </button>
                        <button style="background-color:lightgray; border-color:black; color:brown" class="p-button"> <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a> </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>