@model MJL_Ecommerce.Models.Factura_Producto

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Carrito de Compras</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProductoId" class="control-label"></label>
                <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId"></select>
                <span asp-validation-for="ProductoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacturaId" class="control-label"></label>
                <select asp-for="FacturaId" class="form-control" asp-items="ViewBag.FacturaId"></select>
                <span asp-validation-for="FacturaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button style="background-color:lightgray; border-color:black; color:white" class="p-button"> <input type="submit" value="Guardar" class="btn btn-primary" /> </button>
            </div>
        </form>
    </div>
</div>

<div>
    <button style="background-color:lightgray; border-color:black; color:white" class="p-button"> <a asp-action="Index">Regresar</a> </button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
