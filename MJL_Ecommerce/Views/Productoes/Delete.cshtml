@model MJL_Ecommerce.Models.Producto

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Desea eliminar este producto</h3>
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Producto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreProducto)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.Imagen)" width="250" height="200">
        </dd>
        <dt class="col-sm-2">
            Precio
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            Origen
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Origenes.Lugar)
        </dd>
        <dt class="col-sm-2">
            Ubicacion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ubicaciones.Lugar)
        </dd>
        <dt class="col-sm-2">
            Fabricante
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fabricantess.Fabricante)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <button style="background-color:lightgray; border-color:black; color:white" class="p-button"> <a asp-action="Index">Regresar</a> </button>
    </form>
</div>
