@model MJL_Ecommerce.Models.Producto

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Producto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreProducto)
        </dd>
        <dt class = "col-sm-2">
            Descripcion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Imagen
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Imagen)
        </dd>
        <dt class = "col-sm-2">
            Precio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            Origen
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Origenes.Lugar)
        </dd>
        <dt class = "col-sm-2">
            Ubicacion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ubicaciones.Lugar)
        </dd>
        <dt class = "col-sm-2">
            Fabricante
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fabricantess.Fabricante)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Regresar</a>
</div>
